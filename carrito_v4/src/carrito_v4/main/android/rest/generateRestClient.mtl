[module generateRestClient('http://www.eclipse.org/uml2/5.0.0/UML')]
[import services::uml2services/]
[import common::utils_gen/]

[template public generateRestClient(aClass : Class)]
[file ('android/conn/ApiClient.java', false)]
[if (aClass.hasStereotype('WebInterface'))]
[let protocol : OclAny = aClass.getValueOfStereotypeProperty('Mobile Profile::WebInterface', 'protocol')]
[let domain : OclAny = aClass.getValueOfStereotypeProperty('Mobile Profile::WebInterface', 'domain')]
//[protected ('imports')]
import retrofit2.Retrofit;
import retrofit2.converter.gson.GsonConverterFactory;
//[/protected]

public class ApiClient {
    public static final String BASE_URL = "[protocol/]://[domain/]";
    private static Retrofit retrofit = null;


    public static Retrofit getClient() {
        if (retrofit==null) {
            retrofit = new Retrofit.Builder()
                    .baseUrl(BASE_URL)
                    .addConverterFactory(GsonConverterFactory.create())
                    .build();
        }
        return retrofit;
    }
}
