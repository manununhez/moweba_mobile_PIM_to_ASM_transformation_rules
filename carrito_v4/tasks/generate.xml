<?xml version="1.0" encoding="UTF-8"?>
<project default="generate" name="carrito_v4">
    <property name="ECLIPSE_HOME" value="../../../eclipse/modeling-neon/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../.."/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="carrito_v4.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/carrito_v4/bin"/>
    </path>

    <path id="carrito_v4.classpath">
        <path refid="carrito_v4.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="carrito_v4.libraryclasspath.alljars">
        <pathelement location="../carrito_v4/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="carrito_v4.classpath.alljars">
        <path refid="carrito_v4.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="generate">
        <java classname="carrito_v4.main.Generate" classpathref="carrito_v4.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="generate.alljars">
        <java classname="carrito_v4.main.Generate" classpathref="carrito_v4.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
