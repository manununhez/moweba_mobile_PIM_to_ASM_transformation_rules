<Page
    x:Class="Data.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Data">
    <ScrollViewer>
        <Grid x:Name="LayoutRoot">
            <!-- Title Panel -->
            <StackPanel Grid.Row="0" Margin="19,0,0,0">
                <TextBlock Text="PERSISTENCE APP" Style="{ThemeResource TitleTextBlockStyle}" Margin="0,12,0,0"/>
            </StackPanel>
			<StackPanel Grid.Row="1" Margin="19,40,19,19">


			<Button x:Name="btnRestInterface" Content="RestInterface" Click="btnRestInterface_click"/>

			<Button x:Name="btnProduct" Content="Product" Click="btnProduct_click"/>

			<Button x:Name="btnShoppingCart" Content="ShoppingCart" Click="btnShoppingCart_click"/>

			<Button x:Name="btnUser" Content="User" Click="btnUser_click"/>

			<Button x:Name="btnProvider" Content="Provider" Click="btnProvider_click"/>

			<Button x:Name="btnImageProduct" Content="ImageProduct" Click="btnImageProduct_click"/>


            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>

